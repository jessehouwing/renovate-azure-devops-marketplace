                                       "OneLevel":  "One Level"
                                   },
                       "required":  true,
                       "type":  "pickList"
                   }
               ],
    "instanceNameFormat":  "Checking out files from source control",
    "execution":  {
                      "PowerShell":  {
                                         "target":  "$(currentDirectory)\\TfvcCheckout.ps1",
                                         "argumentFormat":  ""
                                     }
                  }
