{
    "id": "af5a2bc1-ecfc-4929-ba5e-a3decfcbeb85",
    "name": "deploy-adf-json",
    "friendlyName": "Deploy ADF JSON files",
    "description": "Deploy Azure Data Factory JSON definition (Datasets/Pipelines/Linked Services) files",
    "author": "liprec",
    "helpMarkDown": "[More Information](https://github.com/liprec/vsts-publish-adf)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "azureps"
    ],
    "version": {
        "Major": "0",
        "Minor": "0",
        "Patch": "1"
    },
    "minimumAgentVersion": "1.95.0",
    "groups": [
        {
            "name": "azure",
            "displayName": "Azure Details",
            "isExpanded": true
        },
        {
            "name": "adf",
            "displayName": "Data Factory Details",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "ConnectedServiceNameSelector",
            "type": "pickList",
            "label": "Azure Connection Type",
            "required": true,
            "helpMarkDown": "",
            "defaultValue": "ConnectedServiceNameARM",
            "options": {
                "ConnectedServiceNameARM": "Azure Resource Manager"
            },
            "groupname": "azure"
        },
        {
            "name": "ConnectedServiceNameARM",
            "type": "connectedService:AzureRM",
            "label": "Azure RM Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription.",
            "groupname": "azure"
        },
        {
            "name": "resourceGroupName",
            "type": "pickList",
            "label": "Resource group",
            "required": true,
            "helpMarkDown": "Provide the name of the resource group.",
            "properties": {
                "EditableOptions": "True"
            },
            "groupname": "azure"
        },
        {
            "name": "adfname",
            "type": "string",
            "label": "Azure Data Factory",
            "defaultValue": "",
            "required": "true",
            "helpMarkDown": "Name of the Azure Data Factory.",
            "groupname": "azure"
        },
        {
            "name": "pathToServices",
            "type": "filePath",
            "label": "Path to Linked Services",
            "groupname": "adf"
        },
        {
            "name": "pathToDatasets",
            "type": "filePath",
            "label": "Path to Datasets",
            "groupname": "adf"
        },
        {
            "name": "pathToPipelines",
            "type": "filePath",
            "label": "Path to Pipelines",
            "groupname": "adf"
        },
        {
            "name": "overwrite",
            "type": "boolean",
            "label": "Overwrite",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Overwrites the existing definitions",
            "groupName": "advanced"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "resourceGroupName",
            "endpointId": "$(ConnectedServiceNameARM)",
            "dataSourceName": "AzureResourceGroups"
        }
    ],
    "instanceNameFormat": "Deploy JSON files to $(adfname)",
    "execution": {
        "PowerShell3": {
            "target": "$(currentDirectory)\\deploy-adf-json.ps1",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}