{
    "id": "2eed6fe6-d190-4086-ba5b-f3d59b274881",
    "name": "suspend-adf-pipeline",
    "friendlyName": "Suspend/Resume ADF Pipelines",
    "description": "Suspend/Resume Azure Data Factory Pipelines",
    "author": "liprec",
    "helpMarkDown": "[More Information](https://github.com/liprec/vsts-publish-adf)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "azureps"
    ],
    "version": {
        "Major": "0",
        "Minor": "0",
        "Patch": "1"
    },
    "minimumAgentVersion": "1.95.0",
    "groups": [
        {
            "name": "azure",
            "displayName": "Azure Details",
            "isExpanded": true
        },
        {
            "name": "adf",
            "displayName": "Data Factory Details",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "ConnectedServiceNameSelector",
            "type": "pickList",
            "label": "Azure Connection Type",
            "required": true,
            "helpMarkDown": "",
            "defaultValue": "ConnectedServiceNameARM",
            "options": {
                "ConnectedServiceNameARM": "Azure Resource Manager"
            },
            "groupname": "azure"
        },
        {
            "name": "ConnectedServiceNameARM",
            "type": "connectedService:AzureRM",
            "label": "Azure RM Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription.",
            "groupname": "azure"
        },
        {
            "name": "resourceGroupName",
            "type": "pickList",
            "label": "Resource group",
            "required": true,
            "helpMarkDown": "Provide the name of the resource group.",
            "properties": {
                "EditableOptions": "True"
            },
            "groupname": "azure"
        },
        {
            "name": "adfname",
            "type": "string",
            "label": "Azure Data Factory",
            "defaultValue": "",
            "required": "true",
            "helpMarkDown": "Name of the Azure Data Factory.",
            "groupname": "azure"
        },
        {
            "name": "pipelineStatus",
            "type": "pickList",
            "label": "Set Pipelines Status",
            "groupname": "adf",
            "options": {
                "suspend": "Paused",
                "resume": "Running"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "resourceGroupName",
            "endpointId": "$(ConnectedServiceNameARM)",
            "dataSourceName": "AzureResourceGroups"
        }
    ],
    "instanceNameFormat": "Suspend/Resume pipelines in $(adfname)",
    "execution": {
        "PowerShell3": {
            "target": "$(currentDirectory)\\deploy-adf-json.ps1",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}