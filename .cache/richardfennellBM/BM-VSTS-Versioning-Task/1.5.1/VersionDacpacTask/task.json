{
    "id":  "fd593137-89b4-4d81-82f1-c098c1343e0a",
    "name":  "VersionDacpac",
    "friendlyName":  "Version DacPacs",
    "description":  "Applies specified version number to all dacpac files in target folder",
    "helpMarkDown":  "Version: 1.5.1. [More Information](https://github.com/rfennell/vNextBuild/wiki/Version-Assemblies-and-Packages-Tasks/)",
    "category":  "Build",
    "author":  "Black Marble",
    "version":  {
                    "Major":  1,
                    "Minor":  5,
                    "Patch":  1
                },
    "minimumAgentVersion":  "1.83.0",
    "groups":  [
                   {
                       "name":  "advanced",
                       "displayName":  "Advanced",
                       "isExpanded":  false
                   }
               ],
    "inputs":  [
                   {
                       "name":  "Path",
                       "type":  "string",
                       "label":  "Source folder",
                       "defaultValue":  "$(Build.SourcesDirectory)",
                       "required":  true,
                       "helpMarkDown":  "Source folder for dacpac files, can be root as it will find all dacpacs recursively"
                   },
                   {
                       "name":  "VersionNumber",
                       "type":  "string",
                       "label":  "Version Number",
                       "defaultValue":  "$(Build.BuildNumber)",
                       "required":  true,
                       "helpMarkDown":  "Version number to apply to files, should be in \u00271.2.3.4\u0027 format"
                   },
                   {
                       "name":  "ToolPath",
                       "type":  "string",
                       "label":  "ToolPath",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "advanced",
                       "helpMarkDown":  "The path to the folder containing the files Microsoft.SqlServer.Dac.dll and Microsoft.SqlServer.Dac.Extensions.dll if not in default location"
                   }
               ],
    "instanceNameFormat":  "Version Dacpac files",
    "execution":  {
                      "PowerShell":  {
                                         "target":  "$(currentDirectory)\\Update-DacPacVersionNumber.ps1",
                                         "argumentFormat":  "",
                                         "workingDirectory":  "$(currentDirectory)"
                                     }
                  }
}