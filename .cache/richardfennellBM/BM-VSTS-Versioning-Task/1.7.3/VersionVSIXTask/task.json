{
    "id":  "76D2151F-27C2-430C-8116-73693D3AB13E",
    "name":  "VersionVSIX",
    "friendlyName":  "Version VSIX package",
    "description":  "Applies a version to a VSIX manifest based on the build number. Based on Microsoft sample from https://msdn.microsoft.com/Library/vs/alm/Build/overview",
    "helpMarkDown":  "Version: 1.7.3. [More Information](https://github.com/rfennell/vNextBuild/wiki/Version-Assemblies-and-Packages-Tasks/)",
    "category":  "Build",
    "visibility":  [
                       "Build",
                       "Release"
                   ],
    "author":  "Black Marble",
    "version":  {
                    "Major":  1,
                    "Minor":  7,
                    "Patch":  3
                },
    "inputs":  [
                   {
                       "name":  "Path",
                       "type":  "string",
                       "label":  "Source folder",
                       "defaultValue":  "$(Build.SourcesDirectory)",
                       "required":  true,
                       "helpMarkDown":  "Source folder for VSIX files, can be root as it will find all files recursively"
                   },
                   {
                       "name":  "VersionNumber",
                       "type":  "string",
                       "label":  "Version Number",
                       "defaultValue":  "$(Build.BuildNumber)",
                       "required":  true,
                       "helpMarkDown":  "Version number to apply to files, can be extraced from the build name \u0027Build HelloWorld_00.00.00000.0\u0027 or provided as a complete version number e.g. 1.1.1.1"
                   },
                   {
                       "name":  "UseRegex",
                       "type":  "boolean",
                       "label":  "Process VersionNumber with Regex",
                       "defaultValue":  "true",
                       "required":  true,
                       "helpMarkDown":  "If set a regex expression is used to extra the version number, in the form 1.1.1.1 from a build number."
                   },
                   {
                       "name":  "DigitMode",
                       "type":  "pickList",
                       "label":  "Number of digit to use",
                       "defaultValue":  "All",
                       "required":  true,
                       "options":  {
                                       "Two":  "Two",
                                       "All":  "All"
                                   },
                       "helpMarkDown":  "Select how many digits of the discovered version number to use.",
                       "visibleRule":  "UseRegex = true"
                   },
                   {
                       "name":  "VersionRegex",
                       "type":  "string",
                       "label":  "Regex Filter",
                       "defaultValue":  "\\d+\\.\\d+\\.\\d+\\.\\d+",
                       "required":  true,
                       "helpMarkDown":  "Regular expression filter build number from name.",
                       "visibleRule":  "UseRegex = true"
                   }
               ],
    "minimumAgentVersion":  "1.82.0",
    "instanceNameFormat":  "Version VSIX",
    "execution":  {
                      "PowerShell":  {
                                         "target":  "$(currentDirectory)\\ApplyVersionToVSIX.ps1",
                                         "argumentFormat":  "",
                                         "workingDirectory":  "$(currentDirectory)"
                                     }
                  }
}