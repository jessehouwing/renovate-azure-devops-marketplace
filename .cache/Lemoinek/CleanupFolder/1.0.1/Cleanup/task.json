{
    "id":  "54b62d89-ac91-4bc3-9495-bbcd521dc2fa",
    "name":  "FolderCleanup",
    "friendlyName":  "Folder Cleanup",
    "description":  "Cleanup a folder.",
    "category":  "Utility",
    "author":  "Kris Lemoine",
    "version":  {
                    "Major":  1,
                    "Minor":  0,
                    "Patch":  1
                },
    "minimumAgentVersion":  "1.83.0",
    "inputs":  [
                   {
                       "name":  "folderPath",
                       "type":  "string",
                       "label":  "Path",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The path to the folder that needs to be cleaned."
                   },
                   {
                       "name":  "retentionDays",
                       "type":  "string",
                       "label":  "Days to keep",
                       "defaultValue":  "30",
                       "required":  false,
                       "helpMarkDown":  "Retention days."
                   },
                   {
                       "name":  "minimumToKeep",
                       "type":  "string",
                       "label":  "Minimum to keep",
                       "defaultValue":  "2",
                       "required":  false,
                       "helpMarkDown":  "Minimum to keep."
                   },
                   {
                       "name":  "remoteMachine",
                       "type":  "string",
                       "label":  "Remote machine",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "advanced",
                       "helpMarkDown":  "The remote machine."
                   },
                   {
                       "name":  "remoteUsername",
                       "type":  "string",
                       "label":  "UserName",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "advanced",
                       "helpMarkDown":  "The username to connect to the remote machine."
                   },
                   {
                       "name":  "remotePassword",
                       "type":  "string",
                       "label":  "Password",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "advanced",
                       "helpMarkDown":  "The password of the user to connect to the remote machine. Set sensitive fields to $(MySecretPassword), and define MySecretPassword in the Variables tab."
                   }
               ],
    "instanceNameFormat":  "Cleanup $(folderPath).",
    "execution":  {
                      "PowerShell3":  {
                                          "target":  "$(currentDirectory)\\Cleanup.ps1",
                                          "argumentFormat":  "",
                                          "workingDirectory":  "$(currentDirectory)"
                                      }
                  }
}