{
    "id": "9d3804a0-aafe-11e9-a72b-012db1536f95",
    "name": "NLUDevOps",
    "friendlyName": "Run NLU.DevOps command line tool",
    "description": "Run NLU.DevOps command line tool.",
    "helpUrl": "https://github.com/microsoft/NLU.DevOps",
    "helpMarkDown": "[Learn more about this task](https://github.com/microsoft/NLU.DevOps)",
    "category": "Test",
    "visibility": [
        "Build"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "author": "Microsoft Corporation",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 7
    },
    "demands": [],
    "minimumAgentVersion": "2.102.0",
    "instanceNameFormat": "NLU.DevOps $(command)",
    "inputs": [
        {
            "name": "command",
            "type": "string",
            "label": "NLU.DevOps command",
            "required": true,
            "helpMarkDown": "One of: 'train', 'test', or 'clean'"
        },
        {
            "name": "service",
            "type": "string",
            "label": "NLU.DevOps service moniker.",
            "required": true,
            "helpMarkDown": "Usually one of: 'luis', 'luisV3', or 'lex'"
        },
        {
            "name": "utterances",
            "type": "filePath",
            "label": "Utterances path",
            "required": true,
            "helpMarkDown": "Learn more about this option for [train](https://github.com/microsoft/NLU.DevOps/blob/master/docs/Train.md#-u---utterances) or [test](https://github.com/microsoft/NLU.DevOps/blob/master/docs/Test.md#-u---utterances)."
        },
        {
            "name": "output",
            "type": "filePath",
            "label": "Output path.",
            "required": false,
            "defaultValue": null,
            "helpMarkDown": "[Learn more about this option](https://github.com/microsoft/NLU.DevOps/blob/master/docs/Test.md#-o---output)."        
        },
        {
            "name": "speech",
            "type": "boolean",
            "label": "Base directory where speech files are located.",
            "required": false,
            "defaultValue": false,
            "helpMarkDown": "Signals whether to use speech testing. [Learn more about this option](https://github.com/microsoft/NLU.DevOps/blob/master/docs/Test.md#--speech)."
        },
        {
            "name": "speechDirectory",
            "type": "filePath",
            "label": "Base directory where speech files are located.",
            "required": false,
            "defaultValue": null,
            "helpMarkDown": "[Learn more about this option](https://github.com/microsoft/NLU.DevOps/blob/master/docs/Test.md#-d---speech-directory)."
        },
        {
            "name": "workingDirectory",
            "type": "filePath",
            "label": "Working Directory",
            "helpMarkDown": "Current working directory where the script is run. Empty is the root of the repo (build) or artifacts (release), which is $(System.DefaultWorkingDirectory)",
            "required": "false"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    },
    "messages": {
        "InstallDotNetCore": "Please install dotnet core to enable NLU results publishing."
    }
}
