{
    "id": "1ba72b0a-f476-4a91-90a0-b8e7a0cc4339",
    "name": "FakeTask",
    "friendlyName": "FAKE Runner",
    "description": "Runs a FAKE build script.",
    "helpMarkDown": "None",
    "category": "Package",
    "author": "Isaac Abraham",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 2
    },
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name":"advanced",
            "displayName":"Advanced",
            "isExpanded":false
        }
    ],    
    "instanceNameFormat": "FAKE $(FakeScript)",
    "inputs": [
        {
            "name": "FakeScript",
            "type": "filePath",
            "label": "Path to FAKE script",
            "defaultValue":"build.fsx",
            "helpMarkDown": "The path to the FAKE build script.",
            "required":"true"
        },
        {
            "name": "FakeTarget",
            "type": "string",
            "label": "Name of FAKE build target",
            "defaultValue":"",
            "helpMarkDown": "Optionally pick the FAKE target to run.",
            "required":"false"
        }
    ],
    "execution": {
        "Process": {
            "target": "packages\\fake\\tools\\FAKE.exe \"$(FakeScript)\"",
            "argumentFormat": "$(FakeTarget)",
            "workingDirectory": "$(Build.SourcesDirectory)"
        }
    }
}