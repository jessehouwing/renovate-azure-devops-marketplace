{
    "id": "63823D31-810C-4957-9BC1-859757ACE94D",
    "name": "processtemplate",
    "friendlyName": "Process Template Uploader",
    "description": "Deploys a Process Template to VSTS",
    "helpMarkDown": "[More Information](https://github.com/nkdAgility/vsts-process-template-task#readme)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Martin Hinshelwood",
    "version": {
        "Major": 0,
        "Minor": 2,
        "Patch": 0
    },
    "minimumAgentVersion": "1.92.0",
    "groups": [
        {
            "name": "missing",
            "displayName": "Missing variables",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "account",
            "type": "string",
            "label": "VSTS Account",
            "defaultValue": "https://privatepreview.visualstudio.com/",
            "required": true,
            "helpMarkDown": "The URL of the VSTS instance to deploy the Template to"
        },
        {
            "name": "accesstoken",
            "type": "string",
            "label": "Access Token",
            "required": true,
            "helpMarkDown": "Personal access token for that instance of VSTS"
        },
        {
            "name": "rootDirectory",
            "type": "filePath",
            "label": "Root directory",
            "defaultValue": "$(System.DefaultWorkingDirectory)\\*.zip",
            "required": true,
            "helpMarkDown": "Base directory for searching files."
        }
    ],
    "instanceNameFormat": "Uploads template to $(account)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\upload-process-template.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(System.DefaultWorkingDirectory)"
        }
    }
}