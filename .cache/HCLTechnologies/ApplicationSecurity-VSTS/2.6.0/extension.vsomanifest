{
    "manifestVersion": 1,
    "scopes": [
        "vso.build_execute"
    ],
    "contributions": [
        {
            "id": "HCL-endpoint",
            "description": "Service endpoint connection to HCL AppScan on Cloud/HCL AppScan 360째",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "Application Security Test",
                "displayName": "HCL AppScan on Cloud/HCL AppScan 360째",
                "url": {
                    "displayName": "Server URL",
                    "helpText": "Specify an AppScan on Cloud or AppScan 360째 Server URL for the connection."
                },
                "dataSources": [
                    {
                        "name": "TestConnection",
                        "endpointUrl": "{{endpoint.url}}/api/v4/Apps?$select=Name,Id&$orderby=Name",
                        "resultSelector": "jsonpath:$.[*]"
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "headers": [
                            {
                                "name": "Authorization",
                                "value": "Bearer {{ #getTokenUsingBasicAuth { 'KeyId' : 'endpoint.username', 'KeySecret' : 'endpoint.password', 'resultSelector' : 'jsonpath:$.Token', 'method':'post', 'authServerUrl':'endpoint.url/api/v4/Account/ApiKeyLogin', 'body' : {'KeyId' : 'endpoint.username', 'keySecret' : 'endpoint.password'} } }}"
                            }
                        ],
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "KeyID",
                                "description": "The API key ID.",
                                "inputMode": "textbox",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "KeySecret",
                                "description": "The API key secret.",
                                "inputMode": "passwordbox",
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "acceptUntrustedCerts",
                                "name": "Allow Untrusted Connections",
                                "description": "Allows Untrusted Connections to the AppScan service.",
                                "inputMode": "checkbox",
                                "isConfidential": false,
                                "defaultValue": false,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "boolean"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "HCL-ase-endpoint",
            "description": "Service endpoint connection to HCL AppScan Enterprise",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "Application Enterprise Security Test",
                "displayName": "HCL AppScan Enterprise",
                "url": {
                    "displayName": "Server URL",
                    "helpText": "HCL AppScan Enterprise Server URL to connect to."
                },
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "KeyID",
                                "description": "The API key ID.",
                                "inputMode": "textbox",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "KeySecret",
                                "description": "The API key secret.",
                                "inputMode": "passwordbox",
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "custom-asoc-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildAndReleaseTask/asoc/asocV02"
            }
        },
        {
            "id": "custom-ase-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildAndReleaseTask/ase/aseV02"
            }
        },
        {
