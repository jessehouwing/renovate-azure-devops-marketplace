{
    "id":  "db16b50e-c2fd-49f4-b1c6-25ba06feb81d",
    "name":  "PowershellSyntaxValidator",
    "friendlyName":  "Validate Powershell Syntax",
    "description":  "Basic validation of powershell syntax",
    "helpMarkDown":  "Version: 1.0.7. )",
    "category":  "Utility",
    "visibility":  [
                       "Build",
                       "Release"
                   ],
    "author":  "Black Marble",
    "version":  {
                    "Major":  1,
                    "Minor":  0,
                    "Patch":  7
                },
    "demands":  [

                ],
    "minimumAgentVersion":  "1.95.0",
    "inputs":  [
                   {
                       "name":  "RootDirectory",
                       "type":  "filePath",
                       "label":  "Source Folder",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The source folder that the validations will be run from. Use [variables](https://go.microsoft.com/fwlink/?LinkID=550988) if files are not in the repo. Example: $(agent.builddirectory)"
                   },
                   {
                       "name":  "Filter",
                       "type":  "string",
                       "label":  "Filter",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "Filter for files to validate. Accepts a comma seperated array and wildcards, e.g. *.ps1, *.psm1 etc"
                   },
                   {
                       "name":  "Exclude",
                       "type":  "string",
                       "label":  "Exclude Files",
                       "defaultValue":  "",
                       "required":  false,
                       "helpMarkDown":  "Any files to exclude from the validation. Accepts a comma seperated array and wildcards."
                   }
               ],
    "dataSourceBindings":  [

                           ],
    "instanceNameFormat":  "Validate Powershell Syntax $(RootDirectory) ",
    "execution":  {
                      "PowerShell":  {
                                         "target":  "$(currentDirectory)\\ValidatePowershell.ps1",
                                         "argumentFormat":  "",
                                         "workingDirectory":  "$(currentDirectory)"
                                     }
                  }
}