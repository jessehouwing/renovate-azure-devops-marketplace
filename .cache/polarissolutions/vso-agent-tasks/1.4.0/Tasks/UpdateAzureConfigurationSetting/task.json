{
    "id": "ef133cf0-c464-4488-8599-bb6fb0dea309",
    "name": "UpdateAzureCloudServiceConfigurationSetting",
    "friendlyName": "Update Cloud Service config setting",
    "description": "Given a service, key, and value, updates the configuration within azure to a provided value.",
    "author": "Chris Taylor (Polaris Solutions)",
    "helpMarkDown": "Select the service you want to update the configuration setting value for and then provide the appropriate key/value",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "azureps"
    ],
    "version": {
        "Major": "1",
        "Minor": "4",
        "Patch": "0"
    },
    "minimumAgentVersion": "1.91.0",
    "instanceNameFormat": "Update Setting $(SettingKey) for $(ServiceName) in $(Slot) to $(SettingValue)",
    "inputs": [
        {
            "name": "ConnectedServiceNameSelector",
            "type": "pickList",
            "label": "Azure Connection Type",
            "required": false,
            "helpMarkDown": "",
            "defaultValue": "ConnectedServiceName",
            "options": {
                "ConnectedServiceName": "Azure Classic",
                "ConnectedServiceNameARM": "Azure Resource Manager"
            }
        },
        {
            "name": "ConnectedServiceName",
            "type": "connectedService:Azure",
            "label": "Azure Classic Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Classic subscription to target for deploying SQL Dacpac files",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceName"
        },
        {
            "name": "ConnectedServiceNameARM",
            "type": "connectedService:AzureRM",
            "label": "Azure RM Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Resource Manager subscription to target for deploying SQL Dacpac files",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceNameARM"
        },
        {
            "name": "ServiceName",
            "type": "pickList",
            "label": "Service Name",
            "defaultValue": "",
            "required": true
        },
        {
            "name": "Slot",
            "type": "pickList",
            "label": "Slot",
            "defaultValue": "",
            "required": true,
            "options": {
                "Production": "Production",
                "Staging": "Staging"
            }
        },
        {
            "name": "SettingKey",
            "type": "string",
            "label": "Setting Key",
            "required": true,
            "defaultValue": "",
            "helpMarkDown": "The key name within the service configuration (.cscfg)"
        },
        {
            "name": "SettingValue",
            "type": "string",
            "label": "Setting Value",
            "required": true,
            "defaultValue": "",
            "helpMarkDown": "The replacement value for the provided key"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "ServiceName",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "AzureHostedServiceNames"
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\Update-AzureConfigurationSetting.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}