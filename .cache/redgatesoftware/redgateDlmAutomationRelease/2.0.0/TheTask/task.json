{
    "id": "C1177C17-3934-4005-BA89-A4549FE4F0A1",
    "name": "RedgateDlmAutomationRelease",
    "friendlyName": "Redgate DLM Automation 2: Release",
    "description": "Safely deploy database changes with Redgate's DLM Automation",
    "helpMarkDown": "[More Information](https://documentation.red-gate.com/display/DLMA2/DLM+Automation+2+documentation)",
    "category": "Deploy",
    "visibility": [
        "Build", "Release"
    ],
    "author": "Redgate Software",
    "version": {
        "Major": 2,
        "Minor": 0,
        "Patch": 0
    },
    "demands": [

    ],
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name": "targetDatabase",
            "displayName": "Target database",
            "isExpanded": true
        }
    ],
    "inputs": [
		{
            "name": "Operation",
            "type": "pickList",
            "label": "Operation",
            "defaultValue": "Create",
            "required": true,
            "options": {
                "Create"           :    "Create a database release",
                "DeployFromPackage":    "Deploy database changes from a package",
                "DeployFromResources":  "Deploy database changes from a database release",
                "DeployFromDatabase":   "Deploy database changes from a live database"
            },
            "helpMarkDown": "Specify the DLM Automation release operation you want to perform"
        },

		{
            "name": "NuGetFile",
            "type": "filePath",
            "label": "Database package",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the DLM Automation database package, or SQL Source Control database repository that you wish to create a database release from.",
            "visibleRule": "Operation = Create"
        },
		{
            "name": "ExportPath",
            "type": "string",
            "label": "Export path",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Path to export database release resources to. Leave blank if you want it to be automatically determined.",
            "visibleRule": "Operation = Create"
        },


		{
            "name": "PackagePath",
            "type": "filePath",
            "label": "Package path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the DLM Automation database package, or SQL Source Control database repository that you wish to deploy from.",
            "visibleRule": "Operation = DeployFromPackage"
        },


		{
            "name": "ImportPath",
            "type": "string",
            "label": "Deployment resources path",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Path to get database release resources from. This should match the Export path on your Create a database release step.",
            "visibleRule": "Operation = DeployFromResources"
        },



        {
            "name": "SourceDatabaseServer",
            "type": "string",
            "label": "Source SQL Server instance",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The fully qualified SQL Server instance name for the source database.",
            "visibleRule": "Operation = DeployFromDatabase"
        },
        {
            "name": "SourceDatabaseName",
            "type": "string",
            "label": "Source database name",
            "defaultValue": "",
            "required": true,
            "visibleRule": "Operation = DeployFromDatabase"
        },
        {
            "name": "SourceAuthMethod",
            "type": "pickList",
            "label": "Authentication method",
            "defaultValue": "sqlServerAuth",
            "required": true,
            "options": {
                "sqlServerAuth": "SQL Server authentication",
                "windowsAuth": "Windows authentication"
            },
            "visibleRule": "Operation = DeployFromDatabase"
        },
        {
            "name": "SourceDatabaseUsername",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": true,
            "visibleRule": "SourceAuthMethod = sqlServerAuth",
            "helpMarkDown": "The SQL Server username used to connect to the source database."
        },
        {
            "name": "SourceDatabasePassword",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "visibleRule": "SourceAuthMethod = sqlServerAuth"
        },



        {
            "name": "TargetDatabaseServer",
            "type": "string",
            "label": "Target SQL Server instance",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The fully qualified SQL Server instance name for the target database.",
            "groupName": "targetDatabase"
        },
        {
            "name": "TargetDatabaseName",
            "type": "string",
            "label": "Target database name",
            "defaultValue": "",
            "required": true,
            "groupName": "targetDatabase"
        },
        {
            "name": "TargetAuthMethod",
            "type": "pickList",
            "label": "Authentication method",
            "defaultValue": "sqlServerAuth",
            "required": true,
            "options": {
                "sqlServerAuth": "SQL Server authentication",
                "windowsAuth": "Windows authentication"
            },
            "groupName": "targetDatabase"
        },
        {
            "name": "TargetDatabaseUsername",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": true,
            "visibleRule": "TargetAuthMethod = sqlServerAuth",
            "helpMarkDown": "The SQL Server username used to connect to the database.",
            "groupName": "targetDatabase"
        },
        {
            "name": "TargetDatabasePassword",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "visibleRule": "TargetAuthMethod = sqlServerAuth",
            "required": true,
            "groupName": "targetDatabase"
        },


        {
            "name": "DeleteFilesInExportFolder",
            "type": "boolean",
            "label": "Delete files in export folder",
            "defaultValue": "true",
            "required": false,
            "visibleRule": "Operation = Create"
        },
        {
            "name": "IgnoreStaticData",
            "type": "boolean",
            "label": "Ignore static data",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Excludes changes to static data.",
            "visibleRule": "Operation = Create || Operation = DeployFromPackage"
        },
		{
		    "name": "SqlCompareOptions",
            "type": "string",
            "label": "SQL Compare options",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "SQL Compare options to apply when generating the update script.",
            "visibleRule": "Operation != DeployFromResources"
		},
        {
            "name": "QueryBatchTimeout",
            "type": "string",
            "label": "Query batch timeout (in seconds)",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "The execution timeout, in seconds, for each batch of queries in the update script. The default value is 30 seconds. A value of zero indicates no execution timeout.",
            "visibleRule": "Operation != Create"
        },
        {
            "name": "FilterPath",
            "type": "string",
            "label": "Filter path",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Specify the location of a SQL Compare filter file (.scpf), which defines objects to include/exclude in the schema comparison. Filter files can be generated by SQL Source Control and SQL Compare.",
            "visibleRule": "Operation != DeployFromResources"
        }


    ],
    "instanceNameFormat": "Perform $(Operation)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\RunDlmAutomation.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}
